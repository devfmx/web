/* Variables */
blue_link = #52B3F9
blue_section = #4F9BD2
green_button = #7dcd40
/* Variables */

/* OOCSS Classes*/
.devf-aply-button
	a
		background blue_link;
		font-weight bolder
		font-size 16px
		padding .7em 3em
		margin: .5em 0
		color white
		text-transform uppercase
		letter-spacing 1px
		box-shadow: 0 3px 1px 0 #228BE2
		border-radius 5px

		-webkit-transition .2s
		-moz-transition .2s
		-o-transition .2s
		transition .2s

		&:hover
			box-shadow: 0 5px 1px 0 #578F2C
			text-decoration none
			background #7dcd40
			color white
			padding .9em 3.2em
			cursor pointer

.devf-white-link
	color white
	text-decoration none

.devf-thin-text
	font-size .9em
	font-weight 100

.devf-wide-image
	height 60vh
	background-position center
	background-repeat no-repeat
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	-moz-box-shadow    inset 0 0 10px #000000
	-webkit-box-shadow inset 0 0 10px #000000
	box-shadow         inset 0 0 10px #000000
/* OOCSS Classes*/

body
	font-family 'Open Sans', sans-serif
	background #efefef

header
	background none
	border-radius 0
	border none
	position absolute
	top 0
	left 0
	right 0

	.navbar
		background none
		border none
		border-radius 0px
		margin 0
		padding 1em 0

		.devf-menu-bar
			li
				a
					color white
					font-weight bolder

					&:hover
						color blue_link

				.devf-selected-menu
					color blue_link


.devf-hero
	background rgba(0, 0, 0, 0.65)
	padding-top 80px
	height 80vh
	width 100vw

	.devf-center-vh
		width 50%
		height 50%
		overflow auto
		margin auto
		position absolute
		top 0
		left 0
		right 0
		bottom 0

		h1
			font-size 3em
			text-align center
			font-family 'Fredoka One', cursive
			text-transform uppercase
			font-weight bolder
			color white

		p
			color white
			text-align center
			margin-top 3em
			font-weight 100
			font-size 1.5em

#devf-hacker-definition
	background-position center
	background-repeat no-repeat
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	padding 0
	background #efefef
	box-shadow

	.devf-word-reference
		h2
			font-size 3.5em
			color #ffffff
			margin-bottom 0

		p
			font-size 1.2em
			font-weight 100
			margin-bottom 0 !important
			line-height 1

			&:last-child
				padding-bottom 0.5em

.devf-hacker-definition-text
	background-position center
	background-repeat no-repeat
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	padding 12em 0

	.container
		background rgba(0,0,0,.5)
		box-shadow 0 3px 3px rgba(0,0,0,0.9)

	h3
		color white
		font-size 3em
		text-align center
		font-family 'Fredoka One', cursive
		text-transform uppercase
		font-weight bolder
	p
		color white
		font-weight 100
		text-align center
		line-height 2em

#devf-hero-video
	position fixed
	right 0
	bottom 0
	min-width 100%
	min-height 100%
	width auto
	height auto
	z-index -1
	background-size cover

#devf-manifesto
	background blue_section
	padding 5em 0

	.devf-manifesto-title
		margin-bottom 2em

	h2
		text-align center
		color white
		margin 0
		font-family 'Fredoka One', cursive

	h3
		text-align center
		color white
		font-weight 100
		padding-bottom 10px
		border-bottom 1px dashed white

	p
		text-align center
		color white
		font-weight 100

	figure
		width 100px
		margin 0 auto

		img
			width 100%
			margin 0

#devf-programs
	background #0F222B
	padding 2em 0

	h2
		font-weight: 100;
		font-family 'Fredoka One', cursive
		border-left 1px dashed white
		display inline-block
		padding .2em .4em
		color white
		margin 0
